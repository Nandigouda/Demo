class P9 
{
	public static void main(String[] args) 
	{
			int n=4;
		char ch='A';
		for(int row=0;row<n;row++)
		{
			for(int col=0;col<n;col++)
			{
				if (row>=col)
				{
				System.out.print(ch);
				ch++;
				}
				else
				{
				System.out.print("  ");

				}}
             	System.out.println();
		}
	}
}